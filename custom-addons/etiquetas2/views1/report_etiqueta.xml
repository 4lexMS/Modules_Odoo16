<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_product_label_no_barcode1"
            inherit_id="product.report_simple_label_dymo">
            
            <!-- Ocultar la secci贸n del c贸digo de barras -->
            <xpath expr="//div[@class='text-start o_label_small_barcode']" position="attributes">
                <attribute name="t-att-style">display:none;</attribute>
            </xpath>

            <!-- Modificar la plantilla para mostrar solo nombre, precio y default_code -->
            <xpath expr="//div[@class='o_label_full']" position="replace">
                <div class="o_label_full" t-att-style="table_style">
                    <div class="o_label_name"
                        style="line-height: 100%;background-color: transparent;padding-top: 1px;">
                        <span t-if="product.is_product_variant"
                            t-field="product.display_name" />
                        <span t-else="" t-field="product.name" />
                    </div>
                    <div class="o_label_left_column">
                        <small class="text-nowrap" t-field="product.default_code" />
                    </div>
                    <div class="text-end" style="padding: 0 4px;">
                        <t t-if="product.is_product_variant">
                            <strong class="o_label_price_small" t-field="product.lst_price"
                                t-options="{'widget': 'monetary', 'label_price': True}" />
                        </t>
                        <t t-else="">
                            <strong class="o_label_price_small" t-field="product.list_price"
                                t-options="{'widget': 'monetary', 'label_price': True}" />
                        </t>
                    </div>
                </div>
            </xpath>
        </template>

        <record id="paperformat_label_sheet_dymo" model="report.paperformat">
            <field name="name">Dymo Label Sheet</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="page_height">57</field>
            <field name="page_width">32</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="disable_shrinking" eval="True" />
            <field name="dpi">96</field>
        </record>

        <!-- Definici贸n de la acci贸n del reporte -->
        <record id="action_report_product_label_no_barcode1" model="ir.actions.report">
            <field name="name">Product Labels No Barcode</field>
            <field name="model">product.template</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">etiquetas2.report_product_label_no_barcode</field>
            <field name="report_file">etiquetas2.report_product_label_no_barcode</field>
            <field name="paperformat_id" ref="product.paperformat_label_sheet_dymo" />
            <field name="print_report_name">'Product Labels - %s' % (object.name)</field>
            <field name="binding_model_id" ref="product.model_product_template" />
        </record>
    </data>
</odoo>