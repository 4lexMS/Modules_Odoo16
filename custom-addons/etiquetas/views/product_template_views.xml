<odoo>
    <data>
        
         <!-- Heredar y personalizar la vista tree del producto -->
         <record id="view_product_tree_custom" model="ir.ui.view">
            <field name="name">product.template.tree.custom</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <!-- Añadir campos ensamblado, weight y manufacturer en la vista tree -->
                <xpath expr="//field[@name='standard_price']" position="after">
                    <field name="ensamblado" string="Ensamblado"/>
                    <field name="weight"/>
                    <field name="manufacturer"/>
                </xpath>
            </field>
        </record>
        
        <!-- Heredar y personalizar la vista de formulario del producto -->
        <record id="view_product_form_custom" model="ir.ui.view">
            <field name="name">product.template.form.custom</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <!-- Cambiar el nombre del campo Precio de venta -->
                <xpath expr="//field[@name='list_price']" position="attributes">
                    <attribute name="string">PVP</attribute>
                </xpath>
                <!-- Añadir campos ensamblado, weight y manufacturer en la pestaña Información general -->
                <xpath expr="//page[@name='general_information']/group" position="inside">
                    <group>
                        <field name="ensamblado" string="Ensamblado"/>
                        <field name="weight"/>
                        <field name="manufacturer"/>
                </group>
                </xpath>
            </field>
        </record>

        <!-- Definición de la acción para la vista tree personalizada -->
        <record id="action_product_template_tree_custom" model="ir.actions.act_window">
            <field name="name">Product Templates</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_product_tree_custom"/>
        </record>
    </data>
</odoo>
