<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_producttemplatelabel_cris">
            <t t-call="web.basic_layout">
                <div class="page">
                    <t t-call="etiquetas.report_productlabel_cris">
                        <t t-set="products" t-value="products" />
                    </t>
                </div>
            </t>
        </template>

        <!--Aqui
        como que no puede encontrar los datos que se ocupan en el reporte-->

        <template id="report_productlabel_cris">
            <t t-call="web.html_container">
                <t t-set="padding_page" t-value="'padding: 2mm'" />
                <t t-foreach="products" t-as="product">
                    <t t-foreach="range(quantity[product.id])" t-as="qty">
                        <t t-set="barcode" t-value="barcode_and_qty[0]"/>
                        <t t-foreach="range(barcode_and_qty[1])" t-as="qty">
                            <t t-call="etiquetas.report_simple_label_c"/>
                        </t>
                    </t>
                </t>
            </t>
        </template>

        <template id="report_simple_label_c">
            <div class="o_label_sheet o_label_dymo" t-att-style="padding_page">
                <div class="o_label_full" t-att-style="table_style">
                    <div>
                        <p>probando</p>
                    </div>
                    <div class="o_label_name"
                        style="line-height: 100%; background-color: transparent; padding-top: 1px;">
                        <t t-if="product.is_product_variant">
                            <span t-field="product.display_name" />
                            <p>probando</p>
                        </t>
                        <t t-else="">
                            <span t-field="product.name" />
                        </t>
                    </div>
                    <div class="o_label_left_column">
                        <small class="text-nowrap" t-field="product.default_code" />
                    </div>
                    <div class="text-end" style="padding: 0 4px;">
                        <t t-if="product.is_product_variant">
                            <strong class="o_label_price_small" t-field="product.lst_price"
                                t-options="{'widget': 'monetary', 'label_price': True}" />
                        </t>
                        <t t-else="">
                            <strong class="o_label_price_small" t-field="product.list_price"
                                t-options="{'widget': 'monetary', 'label_price': True}" />
                        </t>
                    </div>
                </div>
            </div>
        </template>


    </data>
</odoo>